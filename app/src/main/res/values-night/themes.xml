<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chorey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColorDark</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>
        <item name="colorOnPrimary">@color/primaryTextColorDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColorDark</item>
        <item name="colorSecondaryVariant">@color/secondaryColorDark</item>
        <item name="colorOnSecondary">@color/secondaryTextColorDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/CardStyle</item>
        <item name="buttonStyle">@style/ChoreyButton</item>
        <item name="buttonBarButtonStyle">@style/ChoreyBarButton</item>
        <item name="recyclerViewStyle">@style/RecyclerStyleLarge</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>