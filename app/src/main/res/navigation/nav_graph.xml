<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.chorey.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeScreen"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.chorey.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menu_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_menuFragment_to_addHomeDialog"
            app:destination="@id/addHomeDialog" />
        <action
            android:id="@+id/action_menuFragment_to_createNewHomeDialog"
            app:destination="@id/createNewHomeDialog" />
        <action
            android:id="@+id/action_menuFragment_to_joinHomeDialog"
            app:destination="@id/joinHomeDialog" />
        <action
            android:id="@+id/action_menuFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.chorey.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
        <argument
            android:name="homeId"
            app:argType="string"
            />
    </fragment>
    <dialog
        android:id="@+id/addHomeDialog"
        android:name="com.chorey.dialog.AddHomeDialog"
        android:label="dialog_add_home"
        tools:layout="@layout/dialog_add_home" />
    <dialog
        android:id="@+id/createNewHomeDialog"
        android:name="com.chorey.dialog.CreateNewHomeDialog"
        android:label="dialog_create_new_home"
        tools:layout="@layout/dialog_create_new_home" />
    <dialog
        android:id="@+id/joinHomeDialog"
        android:name="com.chorey.dialog.JoinHomeDialog"
        android:label="dialog_join_home"
        tools:layout="@layout/dialog_join_home" />
</navigation>