<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/menuFragment"
        android:name="com.chorey.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menu_to_home"
            app:destination="@id/homeFragment" />
    </fragment>
    <dialog
        android:id="@+id/createNewHomeDialog"
        android:name="com.chorey.dialog.CreateHomeDialog"
        android:label="dialog_create_new_home"
        tools:layout="@layout/dialog_create_home" />
    <dialog
        android:id="@+id/joinHomeDialog"
        android:name="com.chorey.dialog.JoinHomeDialog"
        android:label="dialog_join_home"
        tools:layout="@layout/dialog_join_home" />
    <dialog
        android:id="@+id/createChoreDialog"
        android:name="com.chorey.dialog.ChoreDetailDialog"
        android:label="dialog_create_chore"
        tools:layout="@layout/dialog_chore_detail" >
        <argument
            android:name="homeModel"
            app:argType="com.chorey.data.HomeModel"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="choreModel"
            app:argType="com.chorey.data.ChoreModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </dialog>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.chorey.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
        <argument
            android:name="homeModel"
            android:defaultValue="@null"
            app:argType="com.chorey.data.HomeModel"
            app:nullable="true" />
        <action
            android:id="@+id/action_homeFragment_to_createChoreDialog"
            app:destination="@id/createChoreDialog" />
    </fragment>
</navigation>