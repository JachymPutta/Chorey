<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/menuFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.chorey.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeScreen"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.chorey.ui.menu.Menu"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu">
        <action
            android:id="@+id/action_menu_to_home"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_homeScreen_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_menuFragment_to_addHomeFragment"
            app:destination="@id/addHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.chorey.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/addHomeFragment"
        android:name="com.chorey.ui.menu.AddHomeFragment"
        android:label="fragment_add_home"
        tools:layout="@layout/fragment_add_home" >
        <action
            android:id="@+id/action_addHomeFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
</navigation>