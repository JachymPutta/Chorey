<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="RecyclerStyleLarge" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">0dp</item>
    </style>
    
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:padding">0dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
    </style>
<!--  This adds a border -->
<!--    <item name="strokeWidth">3dp</item>-->
<!--    <item name="strokeColor">?attr/colorOnPrimary</item>-->

    <style name="Chorey.AuthUI">
        <item name="android:colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="android:colorAccent">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="ChoreyButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:background">@drawable/dialog_background</item>
        <item name="backgroundTintMode">src_atop</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="ChoreyButtonIcon">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Bar buttons -->
    <style name="ChoreyBarButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
        <item name="counterTextColor">?attr/colorOnPrimary</item>
        <item name="backgroundColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TimePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColorPrimary">?attr/colorSecondary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="DatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <!-- Fund screen styles -->
    <style name="FundIcon">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="FundName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="FundProgressIndicator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">@dimen/line_space</item>
        <item name="android:indeterminate">false</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="trackThickness">8dp</item>
        <item name="trackColor">@color/ivory</item>
        <item name="indicatorColor">?attr/colorSecondary</item>
        <item name="android:progress">100</item>
    </style>

    <style name="FundTile">
        <item name="android:background">@drawable/dialog_background</item>
        <item name="android:backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="FundProgressText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/expense_empty_progress</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

</resources>
