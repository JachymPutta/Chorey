<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecyclerStyleLarge" parent="Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:clickable">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_height">0dp</item>
    </style>
    
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">10dp</item>
        <item name="cardCornerRadius">15dp</item>
        <item name="android:padding">0dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintHorizontal_bias">0.5</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/ivory</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Chorey.Login">
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="ChoreyButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>

    </style>

    <style name="ChoreyButtonIcon">
        <item name="android:background">@drawable/button_round</item>
    </style>

    <!-- Bar buttons -->
    <style name="ChoreyBarButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
        <item name="hintTextColor">?attr/colorOnPrimary</item>
        <item name="boxStrokeColor">?attr/colorOnPrimary</item>
        <item name="counterTextColor">?attr/colorOnPrimary</item>
    </style>
</resources>